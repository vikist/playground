{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-empty-interface": false, // maybe remove this again because it seems fairly unneccessary
    "no-var-requires": false,
    "no-console": false,
    "jsx-no-bind": false, // maybe remove because of rendering performace 
    "jsx-no-lambda": false, // maybe remove because of rendering performace
    "interface-name": false,
    "jsx-no-multiline-js": false,
    "space-before-function-paren": false,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "max-line-length": [
      true,
      140
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ]
  }
}